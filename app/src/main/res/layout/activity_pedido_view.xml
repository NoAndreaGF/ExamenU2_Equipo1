<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/categoryImage"
        android:background="@drawable/boton_redondo"
        android:backgroundTint="@color/white"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pedido_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/tacotradicional" />

            <TextView
                android:id="@+id/pedido_nombre"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="96dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/tacos"
                android:textColor="@color/verde2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pedido_precio"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/tacoT_precio"
                android:textAlignment="textEnd"
                android:textColor="@color/verde1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pedido_desc"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/tacoT_desc"
                android:textColor="@color/verde1"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="-35dp"
            android:background="@drawable/boton_redondo"
            android:cropToPadding="true"
            android:textSize="8dp"
            android:text="Cancelar" />

    </LinearLayout>

</LinearLayout>